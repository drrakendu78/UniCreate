{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "UniCreate Updater",
  "version": "1.0.0",
  "identifier": "com.drrakendu78.unicreate-updater",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "UniCreate Updater",
        "width": 400,
        "height": 220,
        "resizable": false,
        "center": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": [],
    "icon": [
      "icons/icon.ico"
    ]
  }
}
